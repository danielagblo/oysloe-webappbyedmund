name: oysloe-webapp
region: nyc
services:
  - name: web
    github:
      repo: danielagblo/oysloe-webappbyedmund
      branch: main
      deploy_on_push: true
    build_command: npm run build
    run_command: npm run preview
    environment_slug: node-js
    instance_count: 1
    instance_size_slug: basic-xxs
    http_port: 4173
    routes:
      - path: /
    envs:
      - key: VITE_API_URL
        value: https://api.oysloe.com/api-v1
        scope: RUN_AND_BUILD_TIME
      - key: VITE_WS_URL
        value: wss://api.oysloe.com/ws
        scope: RUN_AND_BUILD_TIME
      - key: VITE_API_CREDENTIALS
        value: omit
        scope: RUN_AND_BUILD_TIME
      - key: VITE_API_AUTH_SCHEME
        value: Token
        scope: RUN_AND_BUILD_TIME
      - key: VITE_USE_MOCKS
        value: "false"
        scope: RUN_AND_BUILD_TIME
      - key: VITE_MEDIA_URL
        value: https://api.oysloe.com
        scope: RUN_AND_BUILD_TIME
